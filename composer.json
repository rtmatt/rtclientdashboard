{
  "name": "rtmatt/rtclientdashboard",
  "description": "A dashboard to show monthly service usage for a client.",
  "authors": [
    {
      "name": "Matt Emrick",
      "email": "matt@redtrainwebservices.com"
    }
  ],
  "require": {
    "guzzlehttp/guzzle": "~6.0"
  },
  "autoload": {
    "psr-4": {
      "RTMatt\\MonthlyServiceClientDashboard\\": "src"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php artisan vendor:publish --provider=RTMatt\MonthlyServiceClientDashboard\Providers\MonthlyServiceClientDashboardServiceProvider --tag=public --force"
    ],
    "post-update-cmd": [
      "php artisan vendor:publish --provider=RTMatt\MonthlyServiceClientDashboard\Providers\MonthlyServiceClientDashboardServiceProvider --tag=public --force"
    ]
  }
}
